@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>There are no animals</h3>
}

@foreach (Animal animal in Model)
{
  <li>@Html.ActionLink($"{@animal.Name}", "Details", new { id = animal.AnimalId}) | @animal.Shelter.Name</li>
}

<h3>@Html.ActionLink("Add a new member to our family","Create", "Animals")</h3>
<h3>@Html.ActionLink("Home", "Index", "Home")</h3>